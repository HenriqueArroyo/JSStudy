{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",             
    "lib": ["ES2020", "DOM"],                
    "moduleResolution": "Node",              
    "rootDir": "./src",                      
    "outDir": "./dist",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "resolveJsonModule": true,               
    "noImplicitAny": true,                   
    "noUnusedLocals": true,                  
    "noUnusedParameters": true,              
    "noFallthroughCasesInSwitch": true       
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
